<?xml version="1.0"?>
<block>
  <name>sensor</name>
  <key>preludium_sensor</key>
  <category>preludium</category>
  <import>import preludium</import>
  <make>preludium.sensor($index, $server_address, $sensing_factor, $noise_samples, $noise_split, $noise_iterations)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Server: sensor ID</name>
    <key>index</key>
    <value>sensor-0</value>
    <type>string</type>
  </param>

  <param>
    <name>Server: address</name>
    <key>server_address</key>
    <value>http://150.254.2.37:8001</value>
    <type>string</type>
  </param>

  <param>
    <name>Sensing: factor of sensing time</name>
    <key>sensing_factor</key>
    <value>0.001</value>
    <type>float</type>
  </param>

  <param>
    <name>Noise: number of samples</name>
    <key>noise_samples</key>
    <value>10000</value>
    <type>int</type>
  </param>

  <param>
    <name>Noise: number of subbands</name>
    <key>noise_split</key>
    <value>20</value>
    <type>int</type>
  </param>

  <param>
    <name>Noise: number of iterations</name>
    <key>noise_iterations</key>
    <value>10</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
